{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/components"],
      "@/components/ui": ["src/components/ui"],
      "@/features": ["src/features"],
      "@/lib": ["src/lib"],
      "@/hooks": ["src/hooks"],
      "@/services": ["src/services"],
      "@/stores": ["src/stores"],
      "@/types": ["src/types"],
      "@/app": ["src/app"]
    }
  }
}
